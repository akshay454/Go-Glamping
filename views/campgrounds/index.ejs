<%- include("../partials/header") %>


		<header class="jumbotron">
			<div class="container">
				<h1> Welcome to Go Glamping! </h1>
				<p> The Stairway to Heaven </p>
				<p> <a class="btn btn-primary btn-large"href="/campgrounds/new"> Add a New Campground </a> </p>
			</div>
		</header>

		<div class="row text-center" style="display:flex; flex-wrap: wrap;">
			<% campgrounds.forEach(function(campgrounds){ %>
				<div class="col-md-3 col-sm-6">
					<div class="card"> 
						<img src = " <%= campgrounds.image %> " class="img-thumbnail">
						<div class="caption">
							<h4> <%= campgrounds.name %> </h4>
							<p>
								<a href="/campgrounds/<%= campgrounds.id %>" class="btn btn-primary">View More</a>
							</p>
						</div>
					</div>
				</div>
			<% }); %>
		</div>

<%- include("../partials/footer") %>